<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0){%>
                <h1>Nothing there!</h1>
            <%} else {%>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1># Order <%= order._id %> From User: <%= order.user.name %> </h1>
                        </li>
                        <ul>
                            <% order.products.forEach(p =>{ %>
                                <li>Name: <%= p.product.title%></li> <li>Quantity: <%= p.quantity %> %></li> 
                            <%})%>
                        </ul>
                    <%})%>
                </ul>
            <%}%>
        </main>
        <%- include('../includes/end.ejs') %>